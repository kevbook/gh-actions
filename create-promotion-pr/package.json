{
  "name": "create-promotion-pr",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build run.js -o dist --source-map",
    "dev": "pnpm run build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.2.5"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": true
  },
  "engines": {
    "node": "20.x"
  }
}
